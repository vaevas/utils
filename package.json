{
  "name": "vaevas-utils",
  "version": "2.0.1",
  "description": "一个前端工具包",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/*",
    "types/*.d.ts"
  ],
  "scripts": {
    "dev": "rollup -w -c",
    "build:types": "tsc -b ./tsconfig.json",
    "build": "npm run build:types && rollup -c rollup.config.js",
    "prepublish": "pnpm version && pnpm build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaevas/utils.git"
  },
  "keywords": [
    "utils",
    "format",
    "frontend",
    "javascript"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts"
    },
    "./dist/*": "./dist/*",
    "./types/*": "./types/*",
    "./package.json": "./package.json"
  },
  "author": "vaevas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vaevas/utils/issues"
  },
  "homepage": "https://github.com/vaevas/utils#readme",
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "rollup": "^3.28.1",
    "rollup-plugin-typescript2": "^0.35.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "typings": "types/index.d.ts"
}
